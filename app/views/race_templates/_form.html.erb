<%= form_with(model:@race,local:true) do |form| %>
  <div class="field">
    <%= form.label :text %>
    <%= form.text_area :text, id: :race_text %>
  </div>

  <div class="field">
    <%= form.check_box :is_published %>
    <%=form.label :publish %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
